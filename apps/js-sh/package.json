{
  "name": "@js-sh/js-sh",
  "version": "0.1.0",
  "description": "Using the bash command simply for Javascript/Typescript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "tsc -p ./tsconfig.prod.json",
    "test": "c8 ava",
    "test:watch": "ava --watch",
    "lint": "eslint --cache --ext=.ts ."
  },
  "keywords": [
    "shell",
    "bash",
    "sh",
    "unix"
  ],
  "author": "AryloYeung <arylo.open@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@js-sh/core": "^0.1.0",
    "@js-sh/system": "^0.1.0"
  },
  "devDependencies": {
    "ava": "^5.3.1",
    "c8": "^8.0.0",
    "eslint": "^8.45.0",
    "eslint-config-js-sh": "^0.0.0",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsconfig": "^0.0.0",
    "typescript": "^5.1.6"
  },
  "ava": {
    "files": [
      "src/**/*.test.ts",
      "src/**/*.spec.ts",
      "test/**/*.spec.ts"
    ],
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "timeout": "30m"
  }
}
